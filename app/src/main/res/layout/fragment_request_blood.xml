<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="20dp"
    tools:context="com.atribus.bloodbankyrc.Fragments.RequestBlood">

    <ScrollView
        android:layout_width="match_parent"

        android:layout_height="match_parent"
        android:scrollbars="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <!--Requested blood-->
            <RelativeLayout
                android:id="@+id/rlrequestedblood"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone">

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="08dp"
                    android:visibility="visible"
                    card_view:cardCornerRadius="2dp"
                    card_view:contentPadding="10dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/reqtv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:text="@string/details_of_request"
                            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                            android:textStyle="bold" />

                        <!--LL name-->
                        <LinearLayout
                            android:id="@+id/llname"

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/reqtv"
                            android:layout_margin="5dp"
                            android:orientation="horizontal"

                            android:weightSum="2">

                            <TextView
                                android:id="@+id/Nametv"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Name"
                                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                                android:textStyle="bold"


                                />

                            <TextView
                                android:id="@+id/tvName"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Test"
                                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"

                                />

                        </LinearLayout>

                        <!-- LL Mobile number-->
                        <LinearLayout
                            android:id="@+id/llmobilenumber"

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/llname"
                            android:layout_margin="5dp"
                            android:orientation="horizontal"

                            android:weightSum="2">

                            <TextView
                                android:id="@+id/Mobiletv"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Contact Number"
                                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                                android:textStyle="bold"


                                />

                            <TextView
                                android:id="@+id/tvmobile"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="1234567890"
                                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"

                                />

                        </LinearLayout>

                        <!-- LL Blood -->
                        <LinearLayout
                            android:id="@+id/llblood"

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/llmobilenumber"
                            android:layout_margin="5dp"
                            android:orientation="horizontal"

                            android:weightSum="3">

                            <TextView
                                android:id="@+id/bloodtv"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Blood Group"
                                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                                android:textStyle="bold"


                                />

                            <TextView
                                android:id="@+id/tvblood"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="end"
                                android:text="O+"
                                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large" />

                            <TextView
                                android:id="@+id/tvbloodunits"

                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="end"
                                android:text="2 units"
                                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large" />

                        </LinearLayout>

                        <!-- LL Location -->
                        <LinearLayout

                            android:id="@+id/lllocation"

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/llblood"
                            android:layout_margin="5dp"
                            android:orientation="horizontal"

                            android:weightSum="2">

                            <TextView
                                android:id="@+id/locationtv"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Location"
                                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                                android:textStyle="bold"


                                />

                            <TextView
                                android:id="@+id/tvlocation"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Malar Fortis"
                                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"

                                />

                        </LinearLayout>

                        <!-- LL Message -->
                        <LinearLayout
                            android:id="@+id/llmessage"

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/lllocation"
                            android:layout_margin="5dp"
                            android:orientation="horizontal"

                            android:weightSum="2">

                            <TextView
                                android:id="@+id/messagetv"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Message"
                                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                                android:textStyle="bold"


                                />

                            <TextView
                                android:id="@+id/tvmessage"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Urgent in 2 hours"
                                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"

                                />

                        </LinearLayout>


                        <LinearLayout
                            android:id="@+id/llbtns"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/llmessage"
                            android:layout_margin="5dp"
                            android:orientation="horizontal"
                            android:weightSum="2">

                            <Button
                                android:id="@+id/btnEdit"
                                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"

                                android:layout_weight="1"
                                android:text="@string/edit_request" />

                            <Button
                                android:id="@+id/btnCancelreq"
                                style="@style/Widget.AppCompat.Button.Colored"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"

                                android:layout_weight="1"
                                android:text="@string/cancel_request" />

                        </LinearLayout>

                    </RelativeLayout>
                </android.support.v7.widget.CardView>

            </RelativeLayout>
            <!--Request Blood-->
            <RelativeLayout
                android:id="@+id/rlrequestblood"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="8dp"
                android:visibility="visible">

                <LinearLayout
                    android:id="@+id/llblooddetails"
                    android:layout_width="match_parent"

                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">


                    <!-- Blood Group-->
                    <com.rengwuxian.materialedittext.MaterialEditText
                        android:id="@+id/et_bloodgroup"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="2dp"
                        android:layout_marginRight="2dp"
                        android:layout_weight="1"
                        android:focusable="false"
                        android:hint="@string/blood_group"
                        app:met_floatingLabel="highlight"
                        app:met_iconLeft="@drawable/ic_blood"
                        app:met_iconPadding="0dp" />

                    <!-- Blood Units-->
                    <com.rengwuxian.materialedittext.MaterialEditText
                        android:id="@+id/et_bloodunits"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2dp"
                        android:layout_marginStart="2dp"
                        android:layout_weight="1"
                        android:hint="@string/Blood_Units"
                        android:inputType="number"
                        app:met_floatingLabel="highlight"
                        app:met_iconLeft="@drawable/ic_units"
                        app:met_iconPadding="0dp"
                        app:met_maxCharacters="1" />


                </LinearLayout>


                <LinearLayout
                    android:id="@+id/llNamedetails"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_below="@id/llblooddetails"
                    android:orientation="horizontal"
                    android:weightSum="2">
                    <!--NAME-->
                    <com.rengwuxian.materialedittext.MaterialEditText
                        android:id="@+id/et_name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:hint="@string/full_name"
                        app:met_floatingLabel="highlight"
                        app:met_iconLeft="@drawable/ic_name"
                        app:met_iconPadding="0dp"
                        app:met_maxCharacters="20" />


                </LinearLayout>


                <!--Mobile number-->
                <com.rengwuxian.materialedittext.MaterialEditText
                    android:id="@+id/et_mobilenumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/llNamedetails"
                    android:focusable="false"
                    android:hint="@string/mobile_number"
                    android:inputType="number"
                    app:met_floatingLabel="highlight"
                    app:met_iconLeft="@drawable/ic_phone"
                    app:met_iconPadding="0dp"

                    />


                <!--Location -->
                <com.rengwuxian.materialedittext.MaterialEditText
                    android:id="@+id/et_location"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/et_mobilenumber"
                    android:layout_centerHorizontal="true"
                    android:hint="@string/Location"
                    app:met_floatingLabel="highlight"
                    app:met_iconLeft="@drawable/ic_location"
                    app:met_iconPadding="0dp" />
                <!--  <AutoCompleteTextView
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:layout_below="@id/et_mobilenumber"
                      android:id="@+id/et_location"

                      android:layout_centerHorizontal="true"
                      android:hint="Enter Place Here"/>
  -->
                <!--et_message -->
                <com.rengwuxian.materialedittext.MaterialEditText
                    android:id="@+id/et_message"
                    android:layout_width="match_parent"


                    android:layout_height="wrap_content"
                    android:layout_below="@id/et_location"

                    android:hint="@string/message"
                    app:met_floatingLabel="highlight"
                    app:met_iconLeft="@drawable/ic_message"
                    app:met_iconPadding="0dp"
                    app:met_maxCharacters="50" />


                <Button
                    android:id="@+id/btn_request"
                    style="@style/Widget.AppCompat.Button.Colored"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/et_message"
                    android:layout_centerInParent="true"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="3dp"
                    android:gravity="center"
                    android:text="@string/ButtonSubmit" />
            </RelativeLayout>

        </RelativeLayout>
    </ScrollView>
</FrameLayout>
